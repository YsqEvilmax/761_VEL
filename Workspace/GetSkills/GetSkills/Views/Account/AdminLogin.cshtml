@model GetSkills.Models.user

@{
    ViewBag.Title = "AdminLogin";
}

<h2 class="form-signin-heading">AdminLogin</h2>

<div class="container">
    @using (Html.BeginForm("AdminLogin", "Account", FormMethod.Post, new { @class = "form-horizontal form-signin", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.email_address, new { @class = "form-control", placeholder = "Email" })
                @Html.ValidationMessageFor(m => m.email_address, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.PasswordFor(m => m.user_pswd, new { @class = "form-control", placeholder = "Password" })
                @Html.ValidationMessageFor(m => m.user_pswd, "", new { @class = "text-danger" })
            </div>
        </div>

                <div class="form-group">
                    <div class="col-md-10">
                        <div class="checkbox">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" value="Admin Login" class="btn btn-lg btn-primary btn-block" />
                    </div>
                </div>
    }

</div> <!-- /container -->
