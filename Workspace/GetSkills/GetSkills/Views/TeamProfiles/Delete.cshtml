@model GetSkills.Models.ProfileIndexViewModel

@{
    ViewBag.Title = "Delete";
}

<link rel="stylesheet" href="~/Content/font-awesome.css">
<style>
    .floating-box {
        float: left;
        min-width: 180px;
        height: 24px;
        margin: 5px;
        color: #555;
        white-space: nowrap;
    }

    .floating-box-courses {
        float: left;
        min-width: 300px;
        height: 24px;
        margin: 5px;
        color: #555;
        white-space: nowrap;
    }

    .story_image_box {
        margin-bottom: 4px;
        width: 300px;
    }

    .story_category_babel {
        width: 140px;
        color: #333;
        font-weight: normal;
    }

    .story_course_babel {
        width: 300px;
        color: #333;
        font-weight: normal;
    }

    .story_dd {
        margin-bottom: 15px;
    }

    header .container {
        max-width: none;
    }
</style>

<script type="text/javascript">
    function removeWidthLimit() {
        document.getElementById('page_container').style.maxWidth = 'none';
        document.getElementById('page_container').style.paddingRight = '60px';
        document.getElementById('page_container').style.paddingLeft = '60px';
    }
    window.onload = removeWidthLimit;
</script>

<h2>Delete a Team Profile</h2>

<h3 style="color:red;"><i class="fa fa-bullhorn fa-2x"></i> Are you sure you want to delete this member?</h3>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Name
        </dt>

        <dd class="story_dd">
            @Html.DisplayFor(model => model.teamProfile.name)
        </dd>

        <dt>
            Photo
        </dt>

        <dd class="story_dd">
            @if (Model.teamProfile.pic != "")
            {
                <img src="@Url.Content(Model.teamProfile.pic)" alt="User Image" style="height:160px;" />
            }
        </dd>

        <dt>
            Description
        </dt>

        <dd class="story_dd">
            @Html.DisplayFor(model => model.teamProfile.detail)
        </dd>

        <dt>
            Linkedin
        </dt>

        <dd class="story_dd">
            @Html.DisplayFor(model => model.teamProfile.linked_url)
        </dd>

        
        @using (Html.BeginForm())
        {
            <dt>
            </dt>

            <dd class="story_dd">
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-primary" />
                </div>
            </dd>
        }

    </dl>

    @Html.ActionLink(" Back to List", "Index", new { }, new { @class = "fa fa-arrow-circle-o-left fa-lg" })

</div>

