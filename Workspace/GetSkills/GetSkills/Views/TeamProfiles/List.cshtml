@model IEnumerable<GetSkills.Models.ProfileIndexViewModel>

@{
    ViewBag.Title = "List";
}

<link rel="stylesheet" href="~/Content/font-awesome.css">
<style>
    th {
        background-color: dimgray;
        border-left: 1px solid #555;
        border-right: 1px solid #777;
        border-top: 1px solid #555;
        border-bottom: 1px solid #333;
        box-shadow: inset 0 1px 0 #999;
        color: #fff;
        font-weight: bold;
        padding: 10px 15px;
        position: relative;
        text-shadow: 0 1px 0 #000;
        text-align: center;
    }

    .story_font_h2 {
        color: #393939;
    }

    .justify {
    text-align: justify;
    width: 100%;
    height:100%
}


    header .container {
        max-width: none;
    }

</style>

<script type="text/javascript">
    function removeWidthLimit() {
        document.getElementById('page_container').style.maxWidth = 'none';
        document.getElementById('page_container').style.paddingRight = '60px';
        document.getElementById('page_container').style.paddingLeft = '60px';
    }
    window.onload = removeWidthLimit;
</script>

<div class="container marketing">
    <h1 class='heading heading-uber-leading heading-collapse-whole-line heading-centre'>Team Profile</h1>
    <hr class="featurette-divider">

    @foreach (var item in Model)
    {
        <div class="col-sm-4">
            <div style="display:inline">
                @if (item.teamProfile.pic != "")
                {
                    <img class="img-circle" src="@Url.Content(item.teamProfile.pic)" alt="Generic placeholder image" width="200" height="200" />
                }

                <h4 class="control-label">@Html.DisplayFor(modelItem => item.teamProfile.name)</h4>

                <a href=@item.teamProfile.linked_url class="icon-button linkedin">
                    <i class="fa fa-linkedin"></i><span></span>
                </a>

                <p class="justify">@Html.DisplayFor(modelItem => item.teamProfile.detail)</p>
            </div>
        </div>
    }
</div>















