@model IEnumerable<GetSkills.Models.success_story>

@{
    ViewBag.Title = "List";
}

<h2>Success Story List</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.user_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.pic)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.sort_number)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.brief)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.detail_description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.status)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.user_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.pic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sort_number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.brief)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.detail_description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.status)
            </td>
        </tr>
    }

</table>

@foreach (var item in Model)
{
    <div class="container marketing">
        <!-- START THE FEATURETTES -->
        <div class="row featurette">
            <div class="col-sm-9">
                <h1>@Html.DisplayFor(modelItem => item.brief)</h1>
                <p class="lead featurette-description">
                    @Html.DisplayFor(modelItem => item.detail_description)
                </p>
            </div>
            <div class="col-xs-3">
                <img class="featurette-image img-responsive center-block"
                     src="@Url.Content(item.pic)"
                     alt="Generic placeholder image">
                
            </div>
        </div>
        <hr class="featurette-divider">
        <!-- /END THE FEATURETTES -->
    </div><!-- /.container -->
}
