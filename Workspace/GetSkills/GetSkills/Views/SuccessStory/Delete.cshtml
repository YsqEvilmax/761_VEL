@model GetSkills.Models.StoryIndexViewModel

@{
    ViewBag.Title = "Delete";
}

<link rel="stylesheet" href="~/Content/font-awesome.css">
<style>
    .floating-box {
        float: left;
        min-width: 180px;
        height: 24px;
        margin: 5px;
        color: #555;
        white-space: nowrap;
    }

    .floating-box-courses {
        float: left;
        min-width: 300px;
        height: 24px;
        margin: 5px;
        color: #555;
        white-space: nowrap;
    }

    .story_image_box {
        margin-bottom: 4px;
        width: 300px;
    }

    .story_category_babel {
        width: 140px;
        color: #333;
        font-weight: normal;
    }

    .story_course_babel {
        width: 300px;
        color: #333;
        font-weight: normal;
    }

    .story_dd {
        margin-bottom: 15px;
    }

    header .container {
        max-width: none;
    }

</style>

<script type="text/javascript">
    function removeWidthLimit() {
        document.getElementById('page_container').style.maxWidth = 'none';
        document.getElementById('page_container').style.paddingRight = '60px';
        document.getElementById('page_container').style.paddingLeft = '60px';

        //document.getElementById('successStory_sort_number').style.maxWidth = '5em';

        //document.getElementById('successStory_brief').style.height = '80px';
        //document.getElementById('successStory_brief').style.maxWidth = '90%';

        //document.getElementById('successStory_detail_description').style.height = '160px';
        //document.getElementById('successStory_detail_description').style.maxWidth = '90%';
    }
    window.onload = removeWidthLimit;
</script>



<h2>Delete Success Story</h2>

<h3 style="color:red;"><i class="fa fa-bullhorn fa-2x"></i> Are you sure you want to delete this success story?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Name
        </dt>

        <dd class="story_dd">
            @Html.DisplayFor(model => model.successStory.user_name)
        </dd>

        <dt>
            Photo
        </dt>

        <dd class="story_dd">
            @if (Model.successStory.pic != "")
            {
                <img src="@Url.Content(Model.successStory.pic)" alt="User Image" style="height:160px;" />
            }
        </dd>

        <dt>
            Sort Number
        </dt>

        <dd class="story_dd">
            @Html.DisplayFor(model => model.successStory.sort_number)
        </dd>

        <dt>
            Brief Story
        </dt>

        <dd class="story_dd">
            @Html.DisplayFor(model => model.successStory.brief)
        </dd>

        <dt>
            Detail Story
        </dt>

        <dd class="story_dd">
            @Html.DisplayFor(model => model.successStory.detail_description)
        </dd>

        <dt>
            Category
        </dt>

        <dd class="story_dd">
            @for (int i = 0; i < Model.allCategoryList.Count; i++)
            {
                @Html.LabelFor(m => Model.allCategoryList[i].isSelected, Model.allCategoryList[i].category_name, new { @class = "story_category_babel" })
            }
        </dd>

        <dt>
            Course
        </dt>

        <dd class="story_dd">
            @for (int i = 0; i < Model.allCourseList.Count; i++)
            {
                @Html.LabelFor(m => Model.allCourseList[i].isSelected, String.Format("{0}: {1}", Model.allCourseList[i].course_code, Model.allCourseList[i].course_name), new { @class = "story_course_babel" })
            }
        </dd>

        @using (Html.BeginForm())
        {
            <dt>
            </dt>

            <dd class="story_dd">
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-primary" />
                </div>
            </dd>
        }

    </dl>

    @Html.ActionLink(" Back to List", "Index", new { }, new { @class = "fa fa-arrow-circle-o-left fa-lg" })

</div>

