@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model GetSkills.Models.StoryIndexViewModel

@{
    ViewBag.Title = "Details";
}

<div class="container-fluid">
    <div class="container">
        <hr class="featurette-divider">
        <div class="row">
            <!-- Story row -->
            <div class="col-sm-5">
                <img class="featurette-image img-responsive center-block"
                     src="@Url.Content(Model.successStory.pic)"
                     alt="Story teller's portrait img">
            </div>           
            <div class="col-md-5">
                <span class='st_facebook_large' st_url=@Url displayText='Facebook'></span>
                <span class='st_twitter_large' st_url=@Url displayText='Tweet'></span>
                <span class='st_linkedin_large' st_url=@Url displayText='LinkedIn'></span>
                <span class='st_googleplus_large' st_url=@Url displayText='Google+'></span>
            </div>
            <div class="col-sm-7">
                <h1>@Html.DisplayFor(modelItem => Model.successStory.brief)</h1>
                <p class="lead featurette-description">
                    @Html.DisplayFor(modelItem => Model.successStory.detail_description)
                </p>
            </div>
        </div><!-- Story row end -->

        <hr class="featurette-divider">

        <h2>Learning Trace</h2>
        <div class="row">
            <!-- Course list row -->
            <table class="table table-hover table-bordered no_max_width">
                <thead>
                    <tr style="white-space:nowrap">
                        <th>Course Name</th>
                        <th>Description</th>
                        <th>Price</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.courses)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.course_name)</td>
                            <td>@Html.DisplayFor(modelItem => item.description)</td>
                            <td>@Html.DisplayFor(modelItem => item.price)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div><!-- Course list row end -->
    </div><!-- Container end -->

    <div class="col-md-12">
        <div class="btn-group pull-right" role="group" aria-label="...">
            @Html.ActionLink("Edit", "Edit", new { id = Model.successStory.success_story_id }, new { @class = "btn btn-default" })
            @Html.ActionLink("Back to List", "List", new { }, new { @class = "btn btn-primary" })
        </div>
    </div>
</div><!-- /.container -->