<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - GetSkills</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <!--div id="page_container" class="container body-content">-->
    <div class="container" id="page_container">
        @RenderBody()
        <hr />
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script>$("<div>").load("/StaticPages/header.html").appendTo("body")</script>
    <script>$("<div>").load("/StaticPages/footer.html").appendTo("body")</script>
   
    

    <div align="center">Hey! You are the No. @HttpContext.Current.Application["count"].ToString() Visitor of Getskills' website. ^_^</div>
</body>
</html>
